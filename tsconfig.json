{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "suppressExcessPropertyErrors": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "bin",
        "dist",
        "node_modules"
    ]
}